  <style>
    .product-card {
      border: 1px solid #ddd;
      padding: 10px;
      margin-bottom: 20px;
    }
      .product-card {
        border: 1px solid #ddd;
        padding: 10px;
        margin-bottom: 20px;
      }
      .product-details  {
        font-weight: bold;
        color: #fcffff;
      }
    </style>
    
    <div class="container text-center">
        <div class="row">
          <% for(var i=0; i < product.length; i++) { %>
            <div class="col-md-12 mx-auto">
              <div class="product-card">
                <style>
                  .product-image {
                    width: 300px;
                    height: 300px;
                  }
                </style>
                <img class="product-image" src="<%= '/images/' + product[i].image %>" alt="product image">
                <div class="product-details">
                  <h4><%= product[i].product_Name %></h4>
                  <p>สินค้าที่สั่งซื้อ: <%= product[i].product_price %> THB</p>
                  <p>ชื่อลูกค้า: <%= product[i].CustomerName %></p>
                  <p>ที่อยู่ลูกค้า: <%= product[i].Address %></p>
                  <p>จำนวน: <%= product[i].Quantity %></p>
                  <p>ราคารวม: <%= product[i].TotalPrice %> THB</p>
                  <form action="/payment" >
                    <input type="hidden" name="order_ID" value="<%= product[i].OrderID %>">
                    <button type="submit" class="btn btn-success">ชำระเงิน</button>
                  </form>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
