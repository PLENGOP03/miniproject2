    <title>หน้าค้นหา</title>
    <style>
  
  body,p,h1,h2,h3,h4,h5,h6 {font-family: "Lato", sans-serif;} 
    body {
    background-image: url('../images/pexels-lumn-167698.jpg');
    background-repeat: no-repeat;
    background-attachment: fixed;  
    background-size: auto;
    height: 100%;
    color: #fd8905;
    line-height: 1.8;
}


    * {
  box-sizing: border-box;
}

.form-control{
  width: 50%;



}

/* Float four columns side by side */
.column {
  float: left;
  width: 25%;
  padding: 0 10px;
}

/* Remove extra left and right margins, due to padding */
.row {

  width: 90%;
  margin: 0 -5px;
  
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}

/* Responsive columns */
@media screen and (max-width: 600px) {
  .column {
    width: 10%;
    display: block;
    margin-bottom: 1em;
  }
}

/* Style the counter cards */
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  padding: 50px;
  text-align: center;
  background-color: #f1f1f1;
  margin-bottom: 1em;
}
    </style>
    
</head>
<body>

  <div class="w3-top">
    <div class="w3-bar" id="myNavbar">
      <a class="w3-bar-item w3-button w3-hover-black w3-hide-medium w3-hide-large w3-right" href="javascript:void(0);" onclick="toggleFunction()" title="Toggle Navigation Menu">
        <i class="fa fa-bars"></i>
      </a>
      <a href='productForm' class="w3-bar-item w3-button">กลับไปยังหน้าสินค้า</a>
      
      
    </div>
  
  </div><br><br>
    

  
  
    
    
  
  <center>

 <div class="row">
      <% items.forEach ( function (item, index ) { %>
        <div class="column">
          <div class="card">
          
                <img class="card-img-top" src="/images/<%=item.image%>" alt="Product Picture"><br>
                <p><%=item.product_ID %>  
                <%=item.product_Name %></p>
                <p >ราคาสินค้า <%=item.product_price %> บาท</p>
                <p><%=item.product_detail %></p>
              
          </div>
       </div>
      <% } ); %>
      
    
  
        
        </div>
      </div>
    </div>



  </center>
   
      
    
    
