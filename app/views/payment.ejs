<!-- Payment form -->
<div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 payment-form">
        <h2>ชำระเงิน</h2>
        <form  action="/paymentlist" method="POST" >

          <div class="form-group">
            <label for="full-name">เลขที่ใบเสร็จ</label>
            <select class="form-control" id="orderid" name="orderid" >
              <% for (let i = 0; i < product.length; i++) { %>
                <option value="<%= product[i].OrderID %>"><%= product[i].OrderID %></option>
              <% } %>
            </select>
          </div>
          <div class="form-group">
            <label for="full-name">ชื่อ-สกุล</label>
            <select class="form-control" id="customername" name="customername" >
              <% for (let i = 0; i < product.length; i++) { %>
                <option value="<%= product[i].CustomerName %>"><%= product[i].CustomerName %></option>
              <% } %>
            </select>
          </div>
          <div class="form-group">
            <label for="email">อีเมล</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          <div class="form-group">
            <label for="phone">เบอร์โทรศัพท์</label>
            <input type="tel" class="form-control" id="phone" name="phone" required>
          </div>
          <div class="form-group">
            <label for="amount">จำนวนเงิน</label>
            <select class="form-control" id="totalprice" name="totalprice"  >
              <% for (let i = 0; i < product.length; i++) { %>
                <option value="<%= product[i].Totalprice %>"><%= product[i].TotalPrice %> </option>
              <% } %>
            </select>
          </div>
          <div class="form-group">
            <label for="slip">สลิปโอนเงิน</label>
            <input type="file" class="form-control" id="slip" name="slip" accept="image/*" required>
          </div>
          <button type="submit" class="btn btn-primary">ยืนยันข้อมูลชำระเงิน</button>
        </form>
      </div>
    </div>
  </div>
</body>
